<% if pf.object.new_record? %>
  <%#= pf.label :attachment %>
  <%= pf.file_field :attachment, :accept => 'image/*', :capture => 'camera' %>
<% else %>
  <%#= pf.label :attachment %>
  <%= image_tag pf.object.attachment.url(:thumb) %>
  <%= pf.label :_destroy, t(:remove) %>
  <%= pf.check_box :_destroy %>
<% end %>
